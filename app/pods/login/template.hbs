<form>
  <div class="form-group">
    <label>Email:</label>
    {{input value=email class="form-control" placeholder="Your email account"}}
  </div>

  <div class="form-group">
    <label>Password:</label>
    {{input type="password" value=password class="form-control" placeholder="Password"}}
  </div>

  <input type="submit" {{action "login"}} class="btn btn-default" value="Login"/>
</form>
