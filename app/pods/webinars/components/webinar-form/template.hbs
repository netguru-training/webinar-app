<form>
  <div class="form-group">
    <label>Name:</label>
    {{input value=model.name class="form-control" placeholder="Name"}}
  </div>

  <div class="form-group">
    <label>Description:</label>
    {{textarea value=model.description class="form-control" placeholder="Description"}}
  </div>

  <div class="form-group">
    <label>Status:</label>
    {{view "select" content=statuses selection=model.status class="form-control"}}
  </div>

  <div class="form-group">
    <label>Categories:</label>
    {{select-2
      content=categories
      value=choosenCategories
      multiple=true
      optionLabelPath="name"
      placeholder="Choose categories"
      allowClear=true
    }}
  </div>
  <hr/>
  <input type="submit" {{action "save"}} class="btn btn-default" value="Create"/>
</form>
